<odoo>
    <data>
        <record id="view_condo_charge_report_form" model="ir.ui.view">
            <field name="name">view.condo.charge.report.form</field>
            <field name="model">condo.charge.report</field>
            <field name="arch" type="xml">
                <form string="Condo charge Report">
                    <sheet>
                        <group>
                            <group>
                                <field name="start_date"  required="1"/>
                                <field name="end_date" required="1"/>
                            </group>
                        </group>
                    </sheet>
                    <footer>
                        <button name="action_generate_charge_report"
                                type="object"
                                class="btn-primary" string="Make Report"/>
                        <button string="Cancel" special="cancel" class="btn-secondary"/>
                    </footer>
                </form>
            </field>
        </record>
        <record id="action_condo_charge_report" model="ir.actions.act_window">
            <field name="name">Condo Charge Report</field>
            <field name="res_model">condo.charge.report</field>
            <field name="view_mode">form</field>
             <field name="target">new</field>
        </record>

        <menuitem name="Report"
                 id="condo_report_menu_1"
                 sequence="20"
                 parent="condo_menu_root" />

        <menuitem name="Payment Schedule"
            id="condo_menu_report"
            parent="condo.condo_report_menu_1"
            groups="base.group_system"
            action="condo.action_condo_charge_report"/>

    </data>
</odoo>
