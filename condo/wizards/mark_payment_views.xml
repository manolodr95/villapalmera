<odoo>
    <data>

        <record id="wiz_make_payment_form_view" model="ir.ui.view">
        <field name="name">view_make_payment_form</field>
        <field name="model">make.payment</field>
        <field name="arch" type="xml">
            <form string="Make Payment">
                <sheet>
                    <group>
                        <group>
                            <field name="auto_select" widget="toggle_boolean"/>
                            <field name="condo_contract_id" invisible="1" />
                            <field name="contract_line_ids" widget="many2many_tags" domain="[('id','in',condo_contract_line_ids)]" options="{'no_create': 1}"/>
                            <field name="condo_contract_line_ids" widget="many2many_tags" invisible="1" />
                            <field name="payment_amount" />
                        </group>
                        <group>
                            <field name="payment_date"/>
                            <field name="comment"/>
                        </group>
                    </group>
                </sheet>
                <footer>
                    <button name="action_generate_partial_payment" type="object" class="btn-primary" string="Make Payment" />
                    <button string="Cancel" special="cancel" class="btn-secondary" />
                </footer>
            </form>
        </field>
    </record>

        <record id="action_mark_payment" model="ir.actions.act_window">
        <field name="name">Make Payment</field>
        <field name="res_model">make.payment</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>

    </data>
</odoo>
