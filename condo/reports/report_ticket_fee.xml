<odoo>
    <data>

        <template id="report_ticket_fee">
            <t t-name="condo.report_ticket_fee">
                <main>
                    <style type="text/css">
                        .pos-ticket {
                        width: 80mm;
                        font-size: 12px;
                        line-height: 1.2em;
                        font-family: Arial, sans-serif;
                        margin: 0 auto;
                        }

                        .pos-ticket .ticket-header {
                        text-align: center;
                        border-bottom: 1px solid #000;
                        padding-bottom: 5px;
                        margin-bottom: 10px;
                        }

                        .pos-ticket .ticket-header .company-logo {
                        max-width: 100px;
                        margin: 0 auto;
                        }

                        .pos-ticket .ticket-info {
                        margin-bottom: 10px;
                        }

                        .pos-ticket .ticket-items table {
                        width: 100%;
                        border-collapse: collapse;
                        }

                        .pos-ticket .ticket-items th,
                        .pos-ticket .ticket-items td {
                        text-align: left;
                        padding: 3px;
                        border-bottom: 1px solid #ddd;
                        }

                        .pos-ticket .ticket-total {
                        margin-top: 10px;
                        text-align: right;
                        font-weight: bold;
                        }

                        .pos-ticket .ticket-footer {
                        text-align: center;
                        border-top: 1px solid #000;
                        padding-top: 5px;
                        margin-top: 10px;
                        }
                    </style>
                    <div class="page">
                        <div class="oe_structure"/>
                        <t t-foreach="docs" t-as="order">
                            <div class="pos-ticket">
                                <div class="ticket-header">
                                    <img t-if="company.logo" t-att-src="'data:image/png;base64,' + company.logo.decode('ascii')" style="max-height: 100px;" />


                                    <h2 t-esc="company.name"
                                        style="font-family: arial, helvetica, roboto, lato;text-align: center;font-weight: bold;"/>
                                    <div class="address">
                                        <t t-esc="company.street"/>
                                        <t t-esc="company.street2"/>
                                        <t t-esc="company.city"/>
                                        <t t-esc="company.zip"/>
                                        <t t-esc="company.phone"/>
                                    </div>
                                </div>
                                <div class="ticket-info">
                                    <p>
                                        <strong>Fecha:</strong>
                                        <!--<t t-esc="order.date_order.strftime('%d-%m-%Y')"/>-->
                                    </p>
                                    <p>
                                        <strong>Cliente:</strong>
                                        <!--<t t-esc="order.partner_id.name"/>-->
                                    </p>
                                    <p>
                                        <strong>Ticket #:</strong>
                                        <!--<t t-esc="order.pos_reference"/>-->
                                    </p>
                                </div>
                                <div class="ticket-items">
                                    <table>
                                        <thead style="font-size: 11px;">
                                            <tr>
                                                <th>Producto</th>
                                                <th>Cant.</th>
                                                <th>Precio</th>
                                                <th>Total</th>
                                            </tr>
                                        </thead>
                                        <tbody style="font-size: 11px;">
                                           <!-- <t t-foreach="order.lines" t-as="line">
                                                <tr>
                                                    <td>
                                                        <t t-esc="line.full_product_name"/>
                                                    </td>
                                                    <td>
                                                        <t t-esc="line.qty"/>
                                                    </td>
                                                    <td>
                                                        <t t-esc="line.price_unit"/>
                                                    </td>
                                                    <td>
                                                        <t t-esc="line.price_subtotal"/>
                                                    </td>
                                                </tr>
                                            </t>-->
                                        </tbody>
                                    </table>
                                </div>
                                <div class="ticket-total">
                                    <p>
                                        <strong>Total:</strong>
                                        <!--<t t-esc="order.amount_total"/>-->
                                    </p>
                                    <p>
                                        <strong>IVA:</strong>
                                        <!--<t t-esc="order.amount_tax"/>-->
                                    </p>
                                    <p>
                                        <strong>Total a Pagar:</strong>
                                        <!--<t t-esc="order.amount_paid"/>-->
                                    </p>
                                </div>
                                <div class="ticket-footer">
                                    <p>
                                        <!--<t t-esc="order.note"/>-->
                                    </p>
                                </div>
                            </div>
                        </t>
                    </div>
                </main>
            </t>
        </template>

    </data>
</odoo>
