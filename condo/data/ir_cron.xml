<odoo>
    <data>
        <record id="ir_cron_condo_email_remainder" model="ir.cron">
            <field name="name">Condo: Email Remainder</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="model_condo_contract"/>
            <field name="code">model.ir_cron_condo_email_remainder(days=7)</field>
            <field name="state">code</field>
        </record>

        <record id="ir_cron_condo_charge_for_late_payment" model="ir.cron">
            <field name="name">Condo: charge for late payment</field>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="model_id" ref="condo.model_condo_contract"/>
            <field name="code">model.action_compute_charge_for_late_payment()</field>
            <field name="state">code</field>
            <field name="active">True</field>
        </record>
    </data>
</odoo>
